box: debian
build:
  steps:
    - arjen/hugo-build:
        version: "0.14"
        theme: cocoa-eh
        flags: --buildDrafts=true
deploy:
  steps:
    - install-packages:
        packages: git ssh-client
    - lukevivier/gh-pages@0.2.1:
        token: $GIT_TOKEN
        domain: read.bebraver.uk
        basedir: public